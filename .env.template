# Azure IoT Hub Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to source control

# IoT Hub connection string (from Azure Portal > IoT Hub > Shared access policies > iothubowner)
IOTHUB_CONNECTION_STRING=""

# IoT Edge device connection string (from Azure Portal > IoT Hub > IoT Edge > your-device)
EDGE_DEVICE_CONNECTION_STRING="HostName=<your-hub>.azure-devices.net;DeviceId=<your-device>;SharedAccessKey=<key>"

# Container Registry (use local for dev, ACR for production)
CONTAINER_REGISTRY=localhost:5000
CONTAINER_REGISTRY_USERNAME=
CONTAINER_REGISTRY_PASSWORD=

# Module versions
SENSOR_SIMULATOR_VERSION=1.0.0
DATA_FILTER_VERSION=1.0.0
ANALYTICS_ALERT_VERSION=1.0.0

# Sensor Simulator Settings
TELEMETRY_INTERVAL_MS=3000
SENSOR_ID=temp-sensor-001

# Data Filter Settings
TEMP_MIN_VALID=-40.0
TEMP_MAX_VALID=85.0
NOISE_THRESHOLD=0.5

# Analytics Alert Settings
ALERT_TEMP_HIGH=35.0
ALERT_TEMP_LOW=-10.0
ROLLING_WINDOW_SIZE=10
